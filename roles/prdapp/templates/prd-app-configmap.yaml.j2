---
apiVersion: v1
kind: ConfigMap
metadata:
  name: "{{prdapp_configmap_name}}"
  namespace: "{{prd_namespace}}"
data:
  #For PRDAPP
  #OIDC CONFIG
  oidc.hostname: "{{prdauth_service_name}}"
  oidc.port: "{{prdauth_port}}"
  #DEFAULT APPLICATION PORT
  default.app.https.port: "{{prdapp_port}}"

  #DEFAULT_POSTGRESQL_DATABASE_CONFIG
  database.name: "{{database.name}}"
  database.create.flag: "{{database.create_flag}}"
  database.server: "{{database.server}}"
  database.port: "{{database.port}}"

  #PRDAUTH
  #currentServer.hostname: "{{prdauth_service_name}}"
  #currentServer.port: "{{prdauth_port}}"
  
  #default.auth.https.port: "{{prdauth_port}}"

  #oidc.client1.hostname: "{{prdapp_service_name}}"
  #oidc.client1.ip: "{{prdapp_service_name}}"
  #oidc.client1.port: "{{prdapp_port}}"
  
  #DEFAULT APPLICATION PORT
  #default.https.port: "{{prdauth_port}}"

  #For OCP Platform
  #container.user.id: "1003310000"
  #For K8 Platform
  container.user.id: "1001"
